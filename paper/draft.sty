\newlength{\argminheight}
\newlength{\argminwidth}
\newcommand{\argmin}[1]{%
  \settowidth{\argminwidth}{argmin}
  \settoheight{\argminheight}{\ensuremath{{#1}}}%
  \addtolength{\argminheight}{0.5ex}%
  \raisebox{-\argminheight}[0pt][\argminheight]%
    {\makebox[0pt][l]{\makebox[\argminwidth]{\ensuremath{\scriptstyle{#1}}}}}%
  \mbox{argmin}}

\newlength{\argmaxheight}
\newlength{\argmaxwidth}
\newcommand{\argmax}[1]{%
  \settowidth{\argmaxwidth}{argmax}
  \settoheight{\argmaxheight}{\ensuremath{{#1}}}%
  \addtolength{\argmaxheight}{0.5ex}%
  \raisebox{-\argmaxheight}[0pt][\argmaxheight]%
    {\makebox[0pt][l]{\makebox[\argmaxwidth]{\ensuremath{\scriptstyle{#1}}}}}%
  \mbox{argmax}}

